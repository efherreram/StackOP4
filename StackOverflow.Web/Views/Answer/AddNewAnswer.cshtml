@model StackOverflow.Web.Models.AddNewAnswerModel

@{
    ViewBag.Title = "AddNewAnswer";
}

<h2>New Answer</h2>


@using (Html.BeginForm()) 
{
    <script type="text/javascript">
        function addAns() {
            var l = document.getElementById("myId").value;
        window.location.href = "/Answer/AddAnswer?desc=" + l;
    }
</script>
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true)

        <div class="form-group">
            @Html.LabelFor(model => model.Description, new { @class = "control-label col-md-2"})
            <div class="col-md-10">
                <textarea id="myId"></textarea>
                @Html.ValidationMessageFor(model => model.Description)
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="button" value="Submit" onclick="addAns()" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @*@Html.ActionLink("Back to Index", "AnswerIndex")*@
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
